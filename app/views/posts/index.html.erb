 <div  class='post-form'>
 	<h3>List of all Articles:</h3>
 	<% @posts.each do |p| %>
 	<div style='border: 2px solid;margin: 2px'>
 		<h4>Title: </h4>
 		<li><a href='/posts/<%= p.id %>'><%= p.title %></a></li>
 		<br>
 		<h4>Content: </h4>
 		<li><%= p.content  %></li>
 		<br>
 		<li>Tag: <%= p.category %></li>
 	</div>
 	<% end %>
 </div>
